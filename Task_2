// TASK 02: Keypad-controlled LED + LCD
#include <Keypad.h>
#include <LiquidCrystal.h>

const byte ROWS = 4, COLS = 4;
char keys[ROWS][COLS] = {
  {'1','2','3','A'},
  {'4','5','6','B'},
  {'7','8','9','C'},
  {'*','0','#','D'}
};
byte rowPins[ROWS] = {9,8,7,6};   // R1..R4
byte colPins[COLS] = {5,4,3,2};   // C1..C4

Keypad keypad = Keypad(makeKeymap(keys), rowPins, colPins, ROWS, COLS);

// LCD: RS=12, E=11, D4=10, D5=A0, D6=A1, D7=A2
LiquidCrystal lcd(12, 11, 10, A0, A1, A2);

const int ledPin = 13;

void setup() {
  pinMode(ledPin, OUTPUT);
  lcd.begin(16,2);
  lcd.print("Ready...");
  lcd.setCursor(0,1);
  lcd.print("1:Welcome 2:ON");
}

void loop() {
  char key = keypad.getKey();
  if (!key) return;

  switch (key) {
    case '1':
      lcd.clear(); lcd.print("Welcome!");
      break;

    case '2':
      digitalWrite(ledPin, HIGH);
      lcd.setCursor(0,1); lcd.print("LED ON         ");
      break;

    case '3':
      digitalWrite(ledPin, LOW);
      lcd.setCursor(0,1); lcd.print("LED OFF        ");
      break;

    case '4':
      for (int i=0;i<5;i++) {
        digitalWrite(ledPin, HIGH); delay(300);
        digitalWrite(ledPin, LOW);  delay(300);
      }
      lcd.setCursor(0,1); lcd.print("Blink done     ");
      break;

    case '5':
      lcd.clear();
      break;
  }
}